{
  "name": "wk2026-prediction-game",
  "version": "1.0.0",
  "description": "World Cup 2026 Prediction Game - Interactive web application for company employees",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:netlify": "npm run install:all && cd server && npm run build && cd ../client && npm run build",
    "test": "cd server && npm test && cd ../client && npm test",
    "lint": "cd server && npm run lint && cd ../client && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/company/wk2026-prediction-game.git"
  },
  "keywords": [
    "world-cup",
    "predictions",
    "football",
    "soccer",
    "tournament",
    "leaderboard"
  ],
  "author": "Your Company",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@netlify/functions": "^5.1.2",
    "@types/nodemailer": "^7.0.9",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@vendia/serverless-express": "^4.12.6",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.13",
    "pg": "^8.17.2",
    "pg-hstore": "^2.3.4",
    "redis": "^5.10.0",
    "sequelize": "^6.37.7"
  }
}
